<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.app.ciziten"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="11"
            />
    <application
            android:allowBackup="true"
            android:icon="@drawable/human_2"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        <activity
                android:name="com.app.citizen.MainActivity"
                android:label="@string/app_name"
                android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!--Poll Application properties start-->
        <activity android:name="com.app.citizen.poll.start.Authorization"
                  android:theme="@style/MenuTheme"></activity>
        <activity android:name="com.app.citizen.poll.MainMenu.MainActivity"
                  android:theme="@style/MenuTheme"></activity>
        <activity android:name="com.app.citizen.poll.start.Registration"
                  android:theme="@style/MenuTheme"></activity>
        <activity android:name="com.app.citizen.poll.DetailActivity"
                  android:theme="@style/MenuTheme"></activity>
        <activity android:name="com.app.citizen.poll.start.Recovery"
                  android:theme="@style/MenuTheme"></activity>
        <activity android:name="com.app.citizen.poll.menu.PollsActivity"
                  android:theme="@style/MenuTheme"></activity>
        <activity android:name="com.app.citizen.poll.MainMenu.slideout.SlideoutActivity"
                  android:theme="@style/MenuTheme"></activity>
        <activity android:name="com.app.citizen.poll.activity.VoteActivity"
                  android:theme="@style/MenuTheme"></activity>
        <activity android:name="com.app.citizen.poll.menu.FeedbackActivity"
                  android:theme="@style/MenuTheme"></activity>
        <activity android:name="com.app.citizen.poll.menu.AboutTheApp"
                  android:theme="@style/MenuTheme"></activity>
        <!--Poll Application properties end-->

        <!--Servise Application properties start-->
        <activity android:name="com.app.citizen.services.activity.ServicesMainActivity"></activity>

        <activity android:name="com.app.citizen.services.activity.HospitalActivity"></activity>
        <activity android:name="com.app.citizen.services.activity.FineActivity"></activity>
        <!--Servise Application properties end-->


        <!--Landmark Application properties start-->
        <activity android:name="com.example.landmark.SightListActivity"></activity>
        <activity android:name="com.example.landmark.FragmentActivity"></activity>
        <!--Landmark Application properties end-->
    </application>

</manifest>
