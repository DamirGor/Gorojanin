<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textSize="20sp"
            android:id="@+id/question_text" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"/>
    <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New RadioButton"
            android:id="@+id/case1"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/question_text"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="32dp"
            android:checked="false"/>
    <RadioButton android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="New RadioButton"
                 android:id="@+id/case2"
                 android:layout_below="@+id/case1" android:layout_alignLeft="@+id/case1"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Следующий вопрос"
            android:id="@+id/button" android:layout_below="@+id/case2" android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"/>
</RelativeLayout>