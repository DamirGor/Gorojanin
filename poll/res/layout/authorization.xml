<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="@drawable/activ">

    <EditText
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editPassword"
            android:layout_gravity="center_horizontal"
            android:layout_centerVertical="true" android:layout_centerHorizontal="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Войти"
            android:id="@+id/buttonLogin" android:layout_below="@+id/editPassword"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Восстановление"
            android:id="@+id/buttonRecovery" android:layout_gravity="right" android:layout_alignTop="@+id/buttonReg"
            android:layout_toRightOf="@+id/buttonLogin"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="54dp"
            android:text="Регистрация"
            android:id="@+id/buttonReg" android:layout_below="@+id/buttonLogin"
            android:layout_toLeftOf="@+id/buttonLogin"/>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true">
        <EditText
                android:layout_width="248dp"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/editPhone"
                android:layout_marginTop="327dp" android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Авторизация"
                android:id="@+id/question_text"
                android:layout_alignBottom="@+id/editPhone" android:layout_centerHorizontal="true"
                android:layout_marginBottom="58dp"/>
    </RelativeLayout>
</RelativeLayout>